<odoo>
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form string="Alumno">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="modulo_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_alumno_list" model="ir.ui.view">
        <field name="name">alumno.list</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <list string="Alumnos">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_alumnos" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">instituto.alumno</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_alumnos" name="Alumnos" parent="menu_instituto_root" action="ciclos.action_alumnos"/>
</odoo>
