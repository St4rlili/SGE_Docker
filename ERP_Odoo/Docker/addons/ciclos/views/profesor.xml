<odoo>
    <record id="view_profesor_form" model="ir.ui.view">
        <field name="name">profesor.form</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <form string="Profesor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="modulo_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_profesor_list" model="ir.ui.view">
        <field name="name">profesor.list</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <list string="Profesores">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_profesores" model="ir.actions.act_window">
        <field name="name">Profesores</field>
        <field name="res_model">instituto.profesor</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_profesores" name="Profesores" parent="menu_instituto_root" action="ciclos.action_profesores"/>

</odoo>
