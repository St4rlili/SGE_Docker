<odoo>
    <menuitem id="menu_instituto_root" name="Instituto"/>

    <record id="view_ciclo_form" model="ir.ui.view">
        <field name="name">ciclo.form</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <form string="Ciclo Formativo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="modulo_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ciclo_list" model="ir.ui.view">
        <field name="name">ciclo.list</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <list string="Ciclos Formativos">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_ciclos" model="ir.actions.act_window">
        <field name="name">Ciclos Formativos</field>
        <field name="res_model">instituto.ciclo</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ciclos" name="Ciclos Formativos" parent="menu_instituto_root" action="ciclos.action_ciclos"/>
</odoo>
