<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_biblioteca_comic_ejemplar" model="ir.actions.act_window">
        <field name="name">Ejemplares de Cómics</field>
        <field name="res_model">biblioteca.comic.ejemplar</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_ejemplar"
            name="Ejemplares"
            parent="biblioteca_base_menu"
            action="action_biblioteca_comic_ejemplar"/>

    <record id="view_biblioteca_comic_ejemplar_form" model="ir.ui.view">
        <field name="name">biblioteca.comic.ejemplar.form</field>
        <field name="model">biblioteca.comic.ejemplar</field>
        <field name="arch" type ="xml">
            <form string="Ejemplar de Cómic">
                <sheet>
                    <group>
                        <field name="comic_id"/>
                        <field name="socio_id"/>
                        <field name="fecha_prestamo"/>
                        <field name="fecha_devolucion"/>
                        <field name="estado" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_biblioteca_comic_ejemplar_list" model="ir.ui.view">
        <field name="name">biblioteca.comic.ejemplar.list</field>
        <field name="model">biblioteca.comic.ejemplar</field>
        <field name="arch" type="xml">
            <list string="Ejemplares de Cómics">
                <field name="comic_id"/>
                <field name="socio_id"/>
                <field name="fecha_prestamo"/>
                <field name="fecha_devolucion"/>
                <field name="estado"/>
            </list>
        </field>
    </record>

</odoo>